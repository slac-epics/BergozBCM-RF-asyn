record(longin, "$(P)$(R)ADC:Rd")
{
    field(DESC, "Sampled ADC value")
    field(DTYP, "stream")
    field(INP,  "@devBergozBCM.proto getAdc $(PORT) $(A)")
    field (SCAN, "I/O Intr")
}

